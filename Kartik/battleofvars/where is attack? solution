#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    long long int cnt=0,cnt1=0,cnt2=0,cnt3=0;
    long long int n;
    char a[100000];
    cin>>n;
    for(int i=0;i<n;i++)       
    cin>>a[i];
    for(int i=0;i<n;i++)
    {
       
        if(a[i]=='D')
            cnt++;
        else if(a[i]=='O')
            cnt1++;
        else if(a[i]=='P')
            cnt2++;
        else 
            cnt3++;
        
    }
    cout<<cnt<<" "<<cnt1<<" "<<cnt2<<" "<<cnt3;
    return 0;
}
